<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img14"
    tools:context=".doctorregisterNext">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <EditText

                android:id="@+id/docAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editback"
                android:drawableLeft="@drawable/ic_baseline_home_24"
                android:drawablePadding="5dp"
                android:hint="Address"
                android:padding="15dp"
                android:paddingLeft="10dp"
                android:textSize="20dp" />

            <EditText

                android:id="@+id/docpincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/editback"
                android:drawableLeft="@drawable/ic_baseline_fiber_pin_24"
                android:drawablePadding="5dp"
                android:hint="pincode"
                android:padding="15dp"
                android:paddingLeft="10dp"
                android:textSize="20dp" />

            <EditText

                android:id="@+id/doccity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/editback"
                android:drawableLeft="@drawable/ic_baseline_location_city_24"
                android:drawablePadding="5dp"
                android:hint="city"
                android:padding="15dp"
                android:paddingLeft="10dp"
                android:textSize="20dp" />
            <EditText

                android:id="@+id/docspecility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/editback"
                android:drawableLeft="@drawable/ic_baseline_done_24"
                android:drawablePadding="5dp"
                android:hint="Speciality"
                android:padding="15dp"
                android:paddingLeft="10dp"
                android:textSize="20dp" />


            <LinearLayout
                android:id="@+id/docimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editback"
                    android:drawableLeft="@drawable/ic_baseline_image_24"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Upload your image here"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/imageid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/editback"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <Button
                android:id="@+id/docrergisterlast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/editback"
                android:backgroundTint="@color/teal_700"
                android:gravity="center"
                android:padding="15dp"
                android:text="REGISTER"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>